{
  "name": "lunuc",
  "version": "0.1.0",
  "description": "This is just another full-stack setup",
  "main": "index.js",
  "repository": "git://github.com/axax/lunuc.git",
  "engines": {
    "node": "13.x",
    "npm": "6.x"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/fileMock.js",
      "\\.(css|less)$": "<rootDir>/test/styleMock.js"
    },
    "setupFiles": [
      "<rootDir>/test/jestsetup.js"
    ]
  },
  "scripts": {
    "install": "npm i",
    "lint": "eslint client/**/*.js extensions/**/*.js server/**/*.js api/**/*.js test/**/*.js",
    "mongodb:clear": "pkill -2 mongod & rm -rf mongodb_tmp",
    "mongodb:start": "mkdir -p mongodb_tmp && mongod --port 27018 --dbpath mongodb_tmp --fork --logpath /dev/null",
    "mongodb": "npm run mongodb:clear && npm run mongodb:start",
    "pretest": "npm run mongodb",
    "test": "export PORT=3001;export MONGO_URL=mongodb://localhost:27018; jest",
    "posttest": "npm run mongodb:clear",
    "client": "export BABEL_ENV=client;API_PORT=3000 node ./server/index.js",
    "client:dev": "export BABEL_ENV=client;API_PORT=3000 webpack serve",
    "build": "export BABEL_ENV=client_build;NODE_ENV=production webpack",
    "api": "export BABEL_ENV=api;PORT=3000 node ./api/index.js",
    "api:dev": "export BABEL_ENV=api;PORT=3000 nodemon ./api/index.js --watch api --watch extensions -i 'gensrc/*' -i 'extensions/*/client.js' -i 'extensions/*/components/*' -i 'extensions/*/containers/*'",
    "api:local": "export MONGO_URL=mongodb://localhost:27018/lunuc;export BABEL_ENV=api;PORT=3000 nodemon ./api/index.js --watch api --watch extensions --ignore 'gensrc/*'",
    "start": "echo \"Start api and client concurrently\" && npm run api & npm run client",
    "start:dev": "echo \"Start api and client in dev mode concurrently\" && npm run api:dev & npm run client:dev",
    "heroku-prebuild": "npm install && node ./clean-node-modules.js",
    "heroku-postbuild": "npm run build"
  },
  "keywords": [
    "React for UI",
    "Redux architecture",
    "Babel for ECMAScript 2016 / 2017",
    "Webpack bundler",
    "Jest for testing",
    "Eslint for code quality",
    "mongodb",
    "Database-as-a-Service by mlap.com",
    "GraphQL API",
    "Express Server",
    "GraphQL Client",
    "Optimistic UI"
  ],
  "author": "simonschaerer <axax@gmx.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/axax/issues"
  },
