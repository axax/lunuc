{
  "name": "lunuc",
  "version": "0.0.1",
  "description": "This is just another full-stack setup",
  "main": "index.js",
  "repository": "git://github.com/axax/lunuc.git",
  "engines": {
    "node": "6.11.2",
    "npm": "5.3.0"
  },
  "jest": {
    "verbose": true
  },
  "scripts": {
    "lint": "eslint src/**/*.js server/**/*.js api/**/*.js test/**/*.js",
    "mongodb:clear": "pkill -2 mongod & rm -rf mongodb_tmp",
    "mongodb:start": "mkdir -p mongodb_tmp && mongod --port 27018 --dbpath mongodb_tmp --fork --logpath /dev/null",
    "mongodb": "npm run mongodb:clear && npm run mongodb:start",
    "pretest": "npm run mongodb",
    "test": "export PORT=3001;export MONGO_URL=mongodb://localhost:27018; jest",
    "posttest": "npm run mongodb:clear",
    "client": "API_PORT=3000 nodemon ./server/index.js --watch server",
    "client:dev": "API_PORT=3000 webpack-dev-server",
    "build": "NODE_ENV=production webpack -p",
    "api": "PORT=3000 nodemon ./api/index.js --watch api",
    "start": "echo \"Build and start api and client concurrently\" && npm run build && npm run api & npm run client",
    "start:dev": "echo \"Start api and client in dev mode concurrently\" && npm run api & npm run client:dev",
    "heroku-postbuild": "npm run build"
  },
  "keywords": [
    "React for UI",
    "Redux architecture",
    "Babel for ECMAScript 2016 / 2017",
    "Webpack bundler",
    "Jest for testing",
    "Eslint for code quality",
    "mongodb",
    "Database-as-a-Service by mlap.com",
    "GraphQL API",
    "Express Server",
    "Apollo GraphQL Client",
    "Optimistic UI"
  ],
  "author": "simonschaerer <axax@gmx.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/axax/issues"
  },
  "dependencies": {
    "antd": "^3.1.0",
    "apollo-cache-inmemory": "^1.1.4",
    "apollo-client": "^2.0.4",
    "apollo-client-preset": "^1.0.5",
    "apollo-link-context": "^1.0.3",
    "apollo-link-error": "^1.0.3",
    "apollo-link-http": "^1.3.2",
    "apollo-link-ws": "^1.0.4",
    "aws-sdk": "^2.175.0",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "classnames": "^2.2.5",
    "draft-js": "^0.10.4",
    "draft-js-alignment-plugin": "^2.0.1",
    "draft-js-drag-n-drop-plugin": "^2.0.1",
    "draft-js-focus-plugin": "^2.0.1",
    "draft-js-image-plugin": "^2.0.1",
    "draft-js-plugins-editor": "^2.0.4",
    "draft-js-resizeable-plugin": "^2.0.1",
    "eslint": "^4.14.0",
    "eslint-plugin-react": "^7.5.1",
    "express": "^4.16.2",
    "express-graphql": "^0.6.11",
    "google-translate-api": "^2.3.0",
    "gql-merge": "0.0.6",
    "graphql": "^0.12.3",
    "graphql-subscriptions": "^0.5.6",
    "graphql-tag": "^2.6.1",
    "http-proxy": "^1.16.2",
