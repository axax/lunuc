{
  "name": "lunuc",
  "version": "0.0.1",
  "description": "This is just another full-stack setup",
  "main": "index.js",
  "repository": "git://github.com/axax/lunuc.git",
  "engines": {
    "node": "6.11.2",
    "npm": "5.3.0"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/fileMock.js",
      "\\.(css|less)$": "<rootDir>/test/styleMock.js"
    },
    "setupFiles": [
      "<rootDir>/test/jestsetup.js"
    ]
  },
  "scripts": {
    "lint": "eslint client/**/*.js extensions/**/*.js server/**/*.js api/**/*.js test/**/*.js",
    "mongodb:clear": "pkill -2 mongod & rm -rf mongodb_tmp",
    "mongodb:start": "mkdir -p mongodb_tmp && mongod --port 27018 --dbpath mongodb_tmp --fork --logpath /dev/null",
    "mongodb": "npm run mongodb:clear && npm run mongodb:start",
    "pretest": "npm run mongodb",
    "test": "export PORT=3001;export MONGO_URL=mongodb://localhost:27018; jest",
    "posttest": "npm run mongodb:clear",
    "client": "API_PORT=3000 nodemon ./server/index.js --watch server",
    "client:dev": "API_PORT=3000 webpack-dev-server",
    "build": "NODE_ENV=production webpack -p",
    "api": "export BABEL_ENV=api;PORT=3000 nodemon ./api/index.js --watch api --watch extensions --ignore 'gensrc/*'",
    "start": "echo \"Build and start api and client concurrently\" && npm run build && npm run api & npm run client",
    "start:dev": "echo \"Start api and client in dev mode concurrently\" && npm run api & npm run client:dev",
    "heroku-postbuild": "npm run build"
  },
  "keywords": [
    "React for UI",
    "Redux architecture",
    "Babel for ECMAScript 2016 / 2017",
    "Webpack bundler",
    "Jest for testing",
    "Eslint for code quality",
    "mongodb",
    "Database-as-a-Service by mlap.com",
    "GraphQL API",
    "Express Server",
    "Apollo GraphQL Client",
    "Optimistic UI"
  ],
  "author": "simonschaerer <axax@gmx.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/axax/issues"
  },
  "dependencies": {
    "antd": "^3.3.3",
    "apollo-cache-inmemory": "^1.1.12",
    "apollo-client": "^2.2.8",
    "apollo-client-preset": "^1.0.8",
    "apollo-link-context": "^1.0.7",
    "apollo-link-error": "^1.0.7",
    "apollo-link-http": "^1.5.3",
    "apollo-link-ws": "^1.0.7",
    "aws-sdk": "^2.218.1",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "classnames": "^2.2.5",
    "draft-js": "^0.10.5",
    "draft-js-alignment-plugin": "^2.0.1",
    "draft-js-drag-n-drop-plugin": "^2.0.1",
    "draft-js-focus-plugin": "^2.0.2",
    "draft-js-image-plugin": "^2.0.2",
    "draft-js-plugins-editor": "^2.0.4",
    "draft-js-resizeable-plugin": "^2.0.2",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.7.0",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "formidable": "^1.2.1",
    "google-translate-api": "^2.3.0",
    "gql-merge": "^0.0.6",
    "graphql": "^0.13.2",
    "graphql-subscriptions": "^0.5.8",
