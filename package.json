{
  "name": "lunuc",
  "version": "0.0.1",
  "description": "This is just another full-stack setup",
  "main": "index.js",
  "engines": {
    "node": "6.11.2"
  },
  "scripts": {
    "lint": "eslint src/**/*.js server/**/*.js api/**/*.js test/**/*.js",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "client": "PORT=8080 API_PORT=3000 nodemon ./server/index.js",
    "client_dev": "PORT=8080 API_PORT=3000 webpack-dev-server",
    "build": "NODE_ENV=production webpack -p",
    "api": "PORT=3000 WS_PORT=5000 nodemon ./api/index.js --watch api",
    "start": "echo \"Build and start api and client concurrently\" && npm run build && npm run api & npm run client",
    "dev": "echo \"Start api and client in dev mode concurrently\" && npm run api & npm run client_dev"
  },
  "keywords": [
    "React for UI",
    "Redux architecture",
    "Babel for ECMAScript 2016 / 2017",
    "Webpack bundler",
    "Jest for testing",
    "Eslint for code quality",
    "mongodb",
    "Database-as-a-Service by mlap.com",
    "GraphQL API",
    "Express Server",
    "Apollo GraphQL Client",
    "Optimistic UI"
  ],
  "author": "simonschaerer <axax@gmx.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/axax/issues"
  },
  "devDependencies": {
    "aws-sdk": "^2.94.0",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.2",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^6.10.2",
    "express": "^4.15.3",
    "express-graphql": "^0.6.7",
    "express-http-proxy": "^1.0.6",
    "gql-merge": "0.0.6",
    "graphql": "^0.10.5",
    "immutability-helper": "^2.3.0",
    "jest": "^19.0.2",
    "jsonwebtoken": "^7.4.1",
    "mongodb": "^2.2.30",
    "nodemon": "^1.11.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-apollo": "^1.4.10",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.2",
    "react-test-renderer": "^15.6.1",
    "redux": "^3.7.2",
    "redux-persist": "^4.8.3",
    "subscriptions-transport-ws": "^0.6.0",
    "webpack": "^2.7.0",
    "webpack-dev-server": "^2.6.1"
  }
}
