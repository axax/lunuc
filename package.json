    "material-ui-icons": "^1.0.0-beta.36",
    "mongodb": "^3.0.5",
    "nodemon": "^1.17.2",
    "prop-types": "^15.6.1",
    "react": "^16.3.0",
    "react-apollo": "^2.1.1",
    "react-dom": "^16.3.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.3.0",
