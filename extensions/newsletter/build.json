{
  "types": [
    {
      "name": "NewsletterSubscriber",
      "noUserRelation": true,
      "entryClonable": true,
      "access":{"read":{"role":"send_newsletter","type": "roleAndUser"}},
      "fields": [
        {
          "name": "email",
          "required": true,
          "clone": "${email}_copy",
          "tab": "general",
          "index": 1
        },
        {
          "name": "state",
          "enum": [
            "optin",
            "subscribed",
            "unsubscribed",
            "invalid"
          ],
          "tab": "general",
          "index": 1
        },
        {
          "name": "language",
          "tab": "general",
          "required": false
        },
        {
          "name": "confirmed",
          "type": "Boolean",
          "tab": "general",
          "index": 1
        },
        {
          "name": "account",
          "type": "User",
          "fields": [
            "username"
          ],
          "index": 1
        },
        {
          "name": "list",
          "multi": true,
          "fullWidth": false,
          "index": 1,
          "tab": "general",
          "type": "NewsletterList",
          "fields": [
            "name"
          ]
        },
        {
          "name": "location",
          "index": 1,
          "hideColumnInTypesByDefault": true,
          "compoundIndex": [
            {
              "unique": true,
              "fields": {
                "email": 1,
                "location": 1
              }
            }
          ]
        },
        {
          "name": "token",
          "hideColumnInTypesByDefault": true,
          "type": "String"
        },
        {
          "name": "unsubscribeMailing",
          "hideColumnInTypesByDefault": true,
          "type": "NewsletterMailing"
        },
        {
          "name": "meta",
          "hideColumnInTypes": true,
          "type": "Object",
          "uitype": "json",
          "tab": "Meta"
        },
        {
          "name": "ownerGroup",
          "hideColumnInTypesByDefault": true,
          "type": "UserGroup",
          "multi": true,
          "fields": [
            "name"
          ],
          "index": 1
        }
      ]
    },
    {
      "name": "NewsletterList",
      "fields": [
        {
          "tab": "general",
          "name": "name",
          "required": true,
          "index": 1
        },
        {
          "tab": "general",
          "name": "count",
          "readOnly": true,
          "dynamic": {
            "type": "NewsletterSubscriber",
            "action": "count",
            "query": {
              "list": {
                "$in": [
                  "_id"
                ]
              }
            }
          }
        }
      ]
    },
    {
      "name": "NewsletterMailing",
      "entryClonable": true,
      "onlyRequestedFields": true,
      "fields": [
        {
          "name": "subject",
          "required": true,
          "tab": "general",
          "localized": true,
          "fullWidth": true
        },
        {
          "name": "list",
          "multi": true,
          "fullWidth": true,
          "type": "NewsletterList",
          "fields": [
            "name"
          ],
          "tab": "general"
        },
        {
          "name": "exclude",
          "type": "NewsletterSubscriber",
          "hideColumnInTypesByDefault": true,
          "fullWidth": true,
          "multi": true,
          "fields": [
            "email"
          ],
          "tab": "general"
        },
        {
          "name": "users",
          "type": "User",
          "hideColumnInTypesByDefault": true,
          "fullWidth": true,
          "multi": true,
          "fields": [
            "username"
          ],
          "tab": "general"
        },
        {
          "tab": "content",
          "name": "template",
          "copyLastValue": true,
          "description": "Es besteht die Möglichkeit, entweder ein Seitentemplate auszuwählen oder den Inhalt direkt an dieser Stelle einzugeben.",
          "type": "CmsPage",
          "hideColumnInTypesByDefault": true,
          "fields": ["_id","name","slug"]
        },
        {
          "tab": "plainContent",
          "name": "text",
          "uitype": "editor",
          "alwaysLoad": false,
          "hideColumnInTypes": true,
          "localized": true
        },
        {
          "tab": "content",
          "name": "html",
          "uitype": "html",
          "alwaysLoad": false,
          "hideColumnInTypes": true,
          "localized": true
        },
        {
          "name": "dataFilter",
          "required": false,
          "tab": "content",
          "localized": false,
          "fullWidth": true,
          "hideColumnInTypesByDefault": true,
          "copyLastValue": true,
          "access": {
            "ui": {
              "role": "manage_types"
            }
          }
        },
        {
          "name": "genericData",
          "type": "GenericData",
          "hideColumnInTypesByDefault": true,
          "fullWidth": true,
          "multi": true,
          "filter": "${fields.dataFilter || ''}",
          "tab": "content",
          "fields": ["_id","data"],
          "pickerField": [
            "title",
            "name"
          ],
          "projection": [
            "title",
            "name"
          ]
        },
        {
          "tab": "attachment",
          "name": "attachment",
          "type": "Media",
          "multi": true,
          "localized": true,
          "hideColumnInTypesByDefault": true,
          "fields": [
            "name",
            "mimeType",
            "src"
          ],
          "index": 1
        },
        {
          "name": "contextProps",
          "uitype": "json",
          "access": {
            "ui": {
              "role": "manage_types"
            }
          },
          "hideColumnInTypesByDefault": true,
          "localized": false
        },
        {
          "name": "unsubscribeHeader",
          "type": "Boolean",
          "hideColumnInTypesByDefault": true,
          "access": {
            "ui": {
              "role": "manage_types"
            }
          },
          "index": 1
        },
        {
          "tab": "send",
          "name": "batchSize",
          "copyLastValue": true,
          "access": {
            "ui": {
              "role": "manage_types"
            }
          },
          "hideColumnInTypesByDefault": true,
          "type": "Float"
        },
        {
          "tab": "send",
          "name": "perHour",
          "copyLastValue": true,
          "hideColumnInTypesByDefault": true,
          "access": {
            "ui": {
              "role": "manage_types"
            }
          },
          "type": "Float"
        },
        {
          "tab": "send",
          "name": "host",
          "copyLastValue": true,
          "access": {
            "ui": {
              "role": "manage_types"
            }
          },
          "hideColumnInTypesByDefault": true
        },
        {
          "tab": "send",
          "name": "language",
          "copyLastValue": true,
          "access": {
            "ui": {
              "role": "manage_types"
            }
          },
          "hideColumnInTypesByDefault": true
        },
        {
          "name": "mailSettings",
          "access": {
            "ui": {
              "role": "manage_types"
            }
          },
          "copyLastValue": true,
          "type": "Object",
          "alwaysLoad": false,
          "hideColumnInTypesByDefault": true,
          "uitype": "json",
          "tab": "Optional"
        },
        {
          "tab": "stats",
          "name": "active",
          "clone": false,
          "description": "Wenn aktiv wird der Versand im Hintergrund ausgeführt",
          "type": "Boolean",
          "index": 1,
          "hideColumnInTypesByDefault": true
        },
        {
          "tab": "stats",
          "name": "state",
          "clone": "new",
          "defaultValue": "new",
          "enum": [
            "new",
            "running",
            "finished",
            "error"
          ],
          "readOnly": false,
          "index": 1
        },
        {
          "tab": "stats",
          "name": "mailCount",
          "readOnly": true,
          "hideColumnInTypesByDefault": true,
          "dynamic": {
            "type": "NewsletterSent",
            "action": "count",
            "query": {
              "mailing": "_id"
            }
          }
        }
      ]
    },
    {
      "name": "NewsletterSent",
      "noUserRelation": true,
      "fields": [
        {
          "name": "subscriber",
          "type": "NewsletterSubscriber",
          "index": 1,
          "fields": [
            "email"
          ]
        },
        {
          "name": "userAccount",
          "type": "User",
          "index": 1,
          "fields": [
            "username"
          ]
        },
        {
          "name": "mailing",
          "type": "NewsletterMailing",
          "index": 1,
          "fields": [
            "subject"
          ]
        },
        {
          "name": "mailResponse",
          "type": "Object",
          "alwaysLoad": false,
          "hideColumnInTypes": true
        },
        {
          "name": "openedAt",
          "type": "Float",
          "uitype": "datetime",
          "index": 1
        }
      ]
    },
    {
      "name": "NewsletterTracking",
      "noUserRelation": true,
      "fields": [
        {
          "name": "subscriber",
          "type": "NewsletterSubscriber",
          "fields": [
            "email"
          ],
          "index": 1
        },
        {
          "name": "mailing",
          "type": "NewsletterMailing",
          "fields": [
            "subject"
          ],
          "index": 1
        },
        {
          "name": "url",
          "type": "String",
          "index": 1
        }
      ]
    }
  ]
}
