{
  "manifest_version": 3,
  "name": "Lunuc Extension",
  "description": "Lunuc test chrome extension",
  "version": "0.1",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "run_at":"document_start",
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_security_policy": "script-src 'self' https://www.lunuc.com; object-src 'self'"
}
