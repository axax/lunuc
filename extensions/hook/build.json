{
  "types": [
    {
      "name": "Hook",
      "entryClonable": true,
      "access": {
        "create": {
          "capability": "admin_options"
        }
      },
      "fields": [
        {
          "name": "name",
          "required": true,
          "clone": "${name} (copy)",
          "index": 1
        },
        {
          "name": "hook",
          "required": true,
          "enum": [
            "appready",
            "typeCreated",
            "typeUpdated",
            "typeDeleted",
            "typeLoaded",
            "beforeTypeLoaded",
            "typeBeforeUpdate",
            "typeCloned",
            "index",
            "tracking",
            "cmsCustomResolver",
            "login",
            "newPassword",
            "beforeSignUp",
            "beforeNewsletterSubscribe",
            "NewUserCreated",
            "Frontend",
            "FrontendAdmin",
            "OnMail",
            "beforeMailSend",
            "beforeCmsPage",
            "enhanceTypeMatch",
            "imapOnFetchMailComposed"
          ],
          "index": 1
        },
        {
          "name": "script",
          "uitype": "jseditor"
        },
        {
          "name": "execfilter",
          "label": "Execution filter",
          "index": 1
        },
        {
          "name": "active",
          "type": "Boolean",
          "index": 1
        }
      ]
    }
  ]
}
